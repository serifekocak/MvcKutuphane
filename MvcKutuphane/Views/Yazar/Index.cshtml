@using MvcKutuphane.Models.Entity;
@model List<TblYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="margin-top:15px">Yazarlar</h2style="margin-top:15px">

<table class="table table-bordered">
    <tr>
        <th>Yazar ID</th>
        <th>Yazar Adı</th>
        <th>Yazar Soyadı</th>
        <th>Yazar Detay</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>@y.DETAY</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm('silmek istiyor musunuz?')" })</td>
            <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>