@model MvcKutuphane.Models.Entity.TblPersonel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!--Html helper function-->
<!--BeginForm(ActionResult, Controller, FormMethod)-->
@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(p => p.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(p => p.PERSONEL)
        @Html.TextBoxFor(p => p.PERSONEL, new { @class = "form-control" })
    </div>
    <div>
        <button style="margin-top:15px" class="btn btn-warning">Güncelle</button>
    </div>
}

